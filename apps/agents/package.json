{
  "name": "agents",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "generate": "dotenvx run -- drizzle-kit generate",
    "migrate": " dotenvx run -- drizzle-kit migrate",
    "build": "nest build",
    "format": "biome format --write src",
    "check": "biome check --write src",
    "start": "dotenvx run -- nest start",
    "start:dev": "dotenvx run -- nest start --watch",
    "start:debug": "dotenvx run -- nest start --debug --watch",
    "start:prod": "dotenvx run -- node dist/main",
    "test": "dotenvx run -- jest",
    "test:watch": "dotenvx run -- jest --watch",
    "test:cov": "dotenvx run -- jest --coverage",
    "test:debug": "dotenvx run -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenvx run -- jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.48.4",
    "@fastify/cors": "^11.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.2.0",
    "@google/genai": "^1.13.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "drizzle-orm": "^0.44.4",
    "fastify": "^5.5.0",
    "nestjs-pino": "^4.4.0",
    "nestjs-zod": "^4.3.1",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/testing": "^11.1.6",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
