{
  "name": "agents",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "build": "nest build",
    "format": "biome format --write src",
    "check": "biome check --write src",
    "start": "dotenvx run -- nest start",
    "start:dev": "dotenvx run -- nest start --watch",
    "start:debug": "dotenvx run -- nest start --debug --watch",
    "start:prod": "dotenvx run -- node dist/main",
    "test": "dotenvx run -- jest",
    "test:watch": "dotenvx run -- jest --watch",
    "test:cov": "dotenvx run -- jest --coverage",
    "test:debug": "dotenvx run -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenvx run -- jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.46.0",
    "@fastify/cors": "^11.0.1",
    "@google/genai": "^1.8.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-fastify": "^11.1.3",
    "drizzle-orm": "^0.44.2",
    "fastify": "^5.4.0",
    "nestjs-zod": "^4.3.1",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
