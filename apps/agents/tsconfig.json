{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    
    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@db/*": ["src/db/*"],
      "@dtos/*": ["src/dto/*"],
      "@schema/*": ["src/schema/*"],
      "@infra/*": ["src/infra/*"],
      "@controller/*": ["src/rooms/controller/*"],
      "@service/*": ["src/rooms/services/*"],
      "@repository/*": ["src/rooms/repositories/*"]
    },
    "resolveJsonModule": true
  }
}
